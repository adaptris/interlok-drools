<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="com.adaptris" module="adp-drools" revision="${ivy.publish.revision}" status="release"/>

  <configurations>
	  <conf name="default" visibility="public" description="runtime dependencies and master artifact can be used with this conf" extends="runtime,master"/>
	  <conf name="master" visibility="public" description="contains only the artifact published by this module itself, with no transitive dependencies"/>
	  <conf name="compile" visibility="public" description="this is the default scope, used if none is specified. Compile dependencies are available in all classpaths."/>
	  <conf name="provided" visibility="public" description="this is much like compile, but indicates you expect the JDK or a container to provide it. It is only available on the compilation classpath, and is not transitive."/>
	  <conf name="runtime" visibility="public" description="this scope indicates that the dependency is not required for compilation, but is for execution. It is in the runtime and test classpaths, but not the compile classpath." extends="compile"/>
	  <conf name="test" visibility="private" description="this scope indicates that the dependency is not required for normal use of the application, and is only available for the test compilation and execution phases." extends="runtime"/>
	  <conf name="system" visibility="public" description="this scope is similar to provided except that you have to provide the JAR which contains it explicitly. The artifact is always available and is not looked up in a repository."/>
	  <conf name="sources" visibility="public" description="this configuration contains the source artifact of this module, if any."/>
	  <conf name="javadoc" visibility="public" description="this configuration contains the javadoc artifact of this module, if any."/>
    <conf name="examples" visibility="public" description="this configuration contains the examples artifact of this module, if any."/>
  	<conf name="optional" visibility="public" description="contains all optional dependencies"/>
	  <conf name="ant" visibility="private" description="Scope for downloading various jars required to support the build.xml"/>
    <conf name="signing" visibility="private" description="Scope for downloading the signing information"/>
  </configurations>
  <publications>
     <artifact name="adp-drools" type="jar" ext="jar"/>
     <artifact name="adp-drools" type="pom" ext="pom"/>
     <artifact name="adp-drools-javadoc" type="javadoc" ext="zip" conf="javadoc"/>
     <artifact name="adp-drools-examples" type="examples" ext="zip" conf="examples"/>
     <artifact type="javadoc" ext="jar" conf="javadoc" m:classifier="javadoc"/>
  </publications>
  <dependencies>
    <dependency org="com.adaptris" name="adp-core" rev="${adp-core-version}" conf="compile->default;javadoc->javadoc" changing="true"/>
    <dependency org="com.adaptris" name="interlok-common" rev="${adp-core-version}" conf="compile->default;javadoc->javadoc" changing="true"/>
  	<dependency org="com.adaptris" name="adp-stubs" rev="${adp-core-version}" changing="true" conf="test->default"/>
    <dependency org="com.adaptris" name="adp-core-apt" rev="${adp-core-version}" conf="compile->default;ant->default" changing="true"/>

  	<dependency org="org.drools" name="drools-compiler" rev="5.6.0.Final" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-core" rev="5.6.0.Final" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-decisiontables" rev="5.6.0.Final" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-jsr94" rev="5.6.0.Final" conf="compile->default"/>

  	<dependency org="org.antlr" name="antlr-runtime" rev="3.3" transitive="false" conf="compile->default"/>
  	<dependency org="org.antlr" name="antlr" rev="3.3" transitive="false" conf="compile->default"/>
  	<dependency org="org.antlr" name="antlr-runtime" rev="3.3" transitive="false" conf="compile->default"/>


  	<!-- Attempting upgrade to drools
  	<dependency org="org.antlr" name="antlr" rev="3.0.1" force="true" conf="compile->default"/>
  	<dependency org="org.mvel" name="mvel" rev="1.3.1-java1.4" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-analytics" rev="4.0.7" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-compiler" rev="4.0.7" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-core" rev="4.0.7" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-decisiontables" rev="4.0.7" conf="compile->default"/>
  	<dependency org="org.drools" name="drools-jsr94" rev="4.0.7" conf="compile->default"/>
  	-->
  	<dependency org="org.apache.velocity" name="velocity" rev="1.7" transitive="false" conf="compile->default"/>
    <dependency org="org.slf4j" name="slf4j-api" rev="1.7.12" conf="compile->default" />
    <dependency org="org.slf4j" name="jcl-over-slf4j" rev="1.7.12" conf="optional->default" />
    <dependency org="org.slf4j" name="slf4j-log4j12" rev="1.7.12" conf="optional->default"/>
    <dependency org="log4j" name="log4j" rev="1.2.17" force="true" conf="test->default;ant->default"/>
    <dependency org="org.ow2.asm" name="asm-all" rev="4.1" conf="compile->default" />

  	<dependency org="junit" name="junit" rev="4.11" conf="test->default"/>
  	<dependency org="org.mockito" name="mockito-all" rev="1.9.5" conf="test->default"/>

    <!-- For Various ANT Tasks -->
    <dependency org="ant-contrib" name="ant-contrib" rev="1.0b3" conf="ant->default" transitive="false"/>
    <dependency org="com.yworks"  name="yguard" rev="2.5.2" conf="ant->default" transitive="false"/>
    <dependency org="org.jacoco" name="org.jacoco.ant" rev="0.7.7.201606060606" conf="ant->default"/>
    <!--
    <dependency org="com.google.code.findbugs" name="findbugs" rev="2.0.1" conf="ant"/>
    -->
    <dependency org="com.adaptris" name="code-signing" rev="2019-RELEASE" conf="signing->default"/>

    <exclude org="asm"/>
    <exclude org="c3p0"/>
    <exclude org="commons-logging"/>
    <exclude org="org.glassfish.hk2.external"/>
    <exclude org="org.apache.ant" artifact="ant"/>
    <exclude org="org.apache.ant" artifact="ant-launcher"/>
    <exclude org="ant"/>
    <exclude org="antlr"/>
  </dependencies>
</ivy-module>
